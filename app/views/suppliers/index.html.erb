<p id="notice"><%= notice %></p>

<h1 class="text-center">Suppliers</h1>

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">Ucode</th>
      <th scope="col">Company name</th>
      <th scope="col">Company contact number</th>
      <th scope="col">Company address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr scope="row">
        <td><%= supplier.ucode %></td>
        <td><%= supplier.company_name %></td>
        <td><%= supplier.company_contact_number %></td>
        <td><%= supplier.company_address %></td>
        <td><%= link_to 'Show Products', supplier %></td>
        <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
        <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Supplier', new_supplier_path, class: "btn btn-secondary btn-lg btn-block"  %>
