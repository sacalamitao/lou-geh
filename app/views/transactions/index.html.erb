<p id="notice"><%= notice %></p>

<h1>Transactions</h1>


<table>
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Unit price</th>
      <th>Product Barcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer.transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.quantity %></td>
        <td><%= transaction.unit_price %></td>
        <td><%= transaction.customer_id %></td>
        <td><%= link_to 'Show', customer_transaction_path(@customer, transaction) %></td>
        <td><%= link_to 'Edit', edit_customer_transaction_path(@customer, transaction) %></td>
        <td><%= link_to 'Destroy', customer_transaction_path(@customer, transaction), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_customer_transaction_path(@customer) %>